{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": [
    "server.ts",
    "src/config/**/*",
    "src/services/**/*",
    "src/scripts/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}